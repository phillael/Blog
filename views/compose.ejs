<%- include("partials/header") -%>

<h1><%= pageTitle %></h1>

<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="compose">Title</label>
    <input class="form-control" type="text" name="postTitle" autocomplete="off">

  </div>
  <div class="form-group">
    <label for="compose">Post</label>
    <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
  </div>
  <button class="btn btn-lg btn-primary mb-2" type="submit" name="button">Publish</button>
</form>
<%- include("partials/footer") -%>
